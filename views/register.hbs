<h1>Register</h1>

{{#if error}}
<div class="alert alert-danger" role="alert">
  {{error}}
</div>
{{/if}}

<form action="/register" method="post">
  <div class="form-group">
    <label for="email">Email address</label>
    <input type="email" class="form-control" name="email" id=email" value="{{form.email}}">
  </div>
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" name="name" id="name" value="{{form.name}}">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" name="password" id="password" autocomplete="off">
  </div>
  <div class="form-group">
    <label for="passwordConfirm">Repeat password</label>
    <input type="password" class="form-control" name="passwordConfirm" id="passwordConfirm" autocomplete="off">
  </div>
  <button type="submit" class="btn btn-primary">Register</button>
</form>